{
    "compilerOptions": {
        "strict": true,
        "jsx": "react-jsx",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "noEmit": true,
        "checkJs": false,
        "noFallthroughCasesInSwitch": true,
        "allowImportingTsExtensions": true,
        "baseUrl": ".",
        "paths": {
            "@both/*": ["src/both/*"],
            "@core/*": ["src/core/*"],
            "@task/*": ["src/task/*"],
            "@root/*": ["*"]
        }
    },
    "include": ["src", "C/apps", "boot.ts", "esbuild.js"]
}
